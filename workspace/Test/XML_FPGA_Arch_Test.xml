<!-- 
    Example of an architecture described in custom XML format.
    This file represents a 5*3 FPGA, this includes 2 CLBs, 7 CB and 6 SB.
-->

<Arch>
<!-- Tile description of block goes up the x-axis and then up the y-axis: First tile describe is the bottom left tile and last one is top right tile. -->

    <Tile type='SB' pos='(0,0)'>
    <!--
        Sides descriptions starts from the northest side (Side 0) and rotates clockwise. 
        If a vertex is the northest point, the starting side becomes the edge located of the right of the vertex.
    -->
        <Side side='0' pin='4'></Side>
        <Side side='1' pin='4'></Side>
        <Side side='2' pin='4'></Side>
        <Side side='3' pin='4'></Side>
        
    <!--
        Switch description of block starts at the bottom left and finished at the top right, following the same logic as the side descriptions.
        0 = Switch disconnectes - 1 = Switch rotated clockwise - 2 = Switch rotated anti-clockwise
    -->
        <uArch type='disjoint'>
            <Switch type='SB-U' pos='(0,0)'> 0 0 0 0 </Switch>
            <Switch type='SB-U' pos='(1,1)'> 0 0 0 0 </Switch>
            <Switch type='SB-U' pos='(2,2)'> 0 0 0 0 </Switch>   
            <Switch type='SB-U' pos='(3,3)'> 0 0 0 0 </Switch>   
        </uArch>

    </Tile>
    <Tile type='CB'>
        <Side>
        <!-- Define length of wire and CB switch position (organize as a matrix like for SB) but don't define which possible connection to CLB is possible. -->
        </Side>
        <Side>
        </Side>
        <Side>
        </Side>
        <Side>
        </Side>

    </Tile>
    <Tile type='SB'>
        <Side>
        </Side>
        <Side>
        </Side>
        <Side>
        </Side>
        <Side>
        </Side>

    </Tile>
    <Tile type='CB'>
        <Side>
        </Side>
        <Side>
        </Side>
        <Side>
        </Side>
        <Side>
        </Side>

    </Tile>
    <Tile type='SB'>
        <Side>
        </Side>
        <Side>
        </Side>
        <Side>
        </Side>
        <Side>
        </Side>

    </Tile>
    <Tile type='CB'>
        <Side>
        </Side>
        <Side>
        </Side>
        <Side>
        </Side>
        <Side>
        </Side>

    </Tile>
    <Tile type='CLB' pos='(1,1)'>
        <!-- Define possible connections to CB -->
        <Side side='0' pin='4'> <!--Northern Side-->
        </Side>
        <Side side='1' pin='4'> <!--Eastern Side-->
        </Side>
        <Side side='2' pin='4'> <!--Western Side-->
        </Side>
        <Side side='3' pin='4'> <!--Southern Side-->
        </Side>

        <!-- Define LUTs values, number of LUT in BLEs, number of BLEs, other info on uArchitecture (capacitance, resistance etc...) and internal configuration of BLEs/CLB -->
        <uArch type='CLB'>
            <block type='BLE' num='0'>
                <logic type='LUT' num='0'>
                </logic>
                <logic type='LUT' num='1'>
                </logic>
            </block>
            <block type='BLE' num='1'>
                <logic type='LUT' num='0'>
                </logic>
                <logic type='LUT' num='1'>
                </logic>
            </block>
        </uArch>
    </Tile>
    <Tile type='CB'>
        <Side>
        </Side>
        <Side>
        </Side>
        <Side>
        </Side>
        <Side>
        </Side>

    </Tile>
    <Tile type='CLB' pos='(3,1)'>
        <Side side='0' pin='4'> <!--Northern Side-->
        </Side>
        <Side side='1' pin='4'> <!--Eastern Side-->
        </Side>
        <Side side='2' pin='4'> <!--Western Side-->
        </Side>
        <Side side='3' pin='4'> <!--Southern Side-->
        </Side>
    </Tile>
